@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

@if (ViewData["IsLoggedIn"] != null && (bool)ViewData["IsLoggedIn"])
{
    <p>You are already logged in as @ViewData["Username"].</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go to Dashboard</a>
}
else
{
    <form asp-action="Login" method="post" class="form-group">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
    @if (ViewBag.Error != null)
    {
        <p class="text-danger">@ViewBag.Error</p>
    }

    <p>Don't have an account? <a href="@Url.Action("SignUp", "Account")">Sign up here</a></p>
}
