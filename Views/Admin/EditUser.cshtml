@model DehghaniTodoApp.Models.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control" value="@Model.Username" required />
    </div>

    <div class="form-group">
        <label for="role">Role</label>
        <input type="text" id="role" name="role" class="form-control" value="@Model.Role" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
